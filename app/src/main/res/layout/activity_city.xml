<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="view"
            type="com.online.factory.factoryonline.modules.city.CityActivity" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_click_background_transparent"
                android:drawableLeft="@drawable/ic_arrow_left_green"
                android:gravity="center_vertical"
                android:text="返回"
                android:paddingLeft="@dimen/x10"
                android:drawablePadding="@dimen/x5"
                android:onClick="@{()->view.finish()}"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/x14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="选择城市"
                android:textColor="#424242"
                android:textSize="@dimen/x16" />

        </RelativeLayout>

        <include layout="@layout/line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y44"
            android:drawableLeft="@drawable/green_rectangle_solid_background"
            android:drawablePadding="@dimen/x11"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x11"
            android:text="已开通服务的城市"
            android:textColor="#424242"
            android:textSize="@dimen/x14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/x15"
            android:background="#dbdbdb" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y44"
            android:paddingLeft="@dimen/x15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前定位"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x15"
                android:textSize="@dimen/x12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/x11"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/x14"
                tool:text="东莞"
                android:id="@+id/tv_current_city" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/x15"
            android:background="#dbdbdb" />
    </LinearLayout>

</layout>