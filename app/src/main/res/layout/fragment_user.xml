    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y160">

                <ImageView
                    android:id="@+id/iv_head_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/user_background" />


                <com.online.factory.factoryonline.customview.RoundImageView
                    android:id="@+id/iv_head_photo"
                    android:layout_width="@dimen/x75"
                    android:layout_height="@dimen/x75"
                    android:layout_centerInParent="true"
                    android:onClick="@{view.clickRoundImage}"
                    android:scaleType="fitXY"
                    app:border_outside_color="#138a5b"
                    app:border_thickness="@dimen/x1"
                    app:imageUrl="@{user.avatar}" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_head_photo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y10"
                    android:hint="请登录 >"
                    android:onClick="@{view.clickRoundImage}"
                    android:text='@{user.userName}'
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="18sp" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_head_background"
                android:layout_marginTop="@dimen/y10" />
        </LinearLayout>


    </ScrollView>
</layout>