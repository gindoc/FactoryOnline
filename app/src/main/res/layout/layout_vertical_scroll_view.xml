<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tag_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x5"
            android:background="@drawable/red_outline_rectangle"
            android:paddingBottom="@dimen/x3"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:paddingTop="@dimen/x3"
            android:textColor="#df3d3f"
            android:textSize="@dimen/x10"
            android:text="没地儿" />

        <TextView
            android:id="@+id/tv_msg_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tool:text="南城靠牛栅产业园厂房出租10000方便宜大甩卖"
            android:textColor="#424242"
            android:textSize="@dimen/x12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y8"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tag_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x5"
            android:background="@drawable/red_outline_rectangle"
            android:paddingBottom="@dimen/x3"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:paddingTop="@dimen/x3"
            android:textColor="#df3d3f"
            android:textSize="@dimen/x10"
            android:text="没地儿"  />

        <TextView
            android:id="@+id/tv_msg_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tool:text="樟木头厂房4500平方原房东标准独立大甩卖"
            android:textColor="#424242"
            android:textSize="@dimen/x12" />
    </LinearLayout>
</LinearLayout>