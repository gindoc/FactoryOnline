<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <include layout="@layout/line"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x5"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/bottom_tab_style"
            android:drawableTop="@drawable/rb_home_drawable_selector"
            android:onClick="onClickHome"
            android:text="首页"/>


        <RadioButton
            android:id="@+id/rb_recommend"
            style="@style/bottom_tab_style"
            android:drawableTop="@drawable/rb_locate_drawable_selector"
            android:onClick="onClickRecommend"
            android:text="推荐"/>

        <RadioButton
            android:id="@+id/rb_msg"
            style="@style/bottom_tab_style"
            android:drawableTop="@drawable/rb_msg_drawable_selector"
            android:onClick="onClickMsg"
            android:text="消息"/>

        <RadioButton
            android:id="@+id/rb_user"
            style="@style/bottom_tab_style"
            android:drawableTop="@drawable/rb_account_drawable_selector"
            android:onClick="onClickUser"
            android:text="我的"/>
    </RadioGroup>
</LinearLayout>
</layout>