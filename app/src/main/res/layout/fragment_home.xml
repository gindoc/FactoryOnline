<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/ic_arrow_down"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:gravity="center"
            android:text="北京"
            android:textSize="18sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/dividerColor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_search"
            android:gravity="center_vertical"
            android:hint="输入小区或商圈名字"
            android:paddingLeft="@dimen/x10"
            android:textSize="18sp"/>
    </LinearLayout>

    <include layout="@layout/line"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:orientation="horizontal">

                <RadioButton
                    style="@style/service_style"
                    android:background="@drawable/find_bg_selector"
                    android:text="我要找房"/>

                <RadioButton
                    style="@style/service_style"
                    android:background="@drawable/agency_bg_selector"
                    android:text="我是中介"/>

                <RadioButton
                    android:background="@drawable/owner_bg_selector"
                    style="@style/service_style"
                    android:text="我是业主"/>
            </RadioGroup>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/fragment_owner"/>
            </FrameLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>