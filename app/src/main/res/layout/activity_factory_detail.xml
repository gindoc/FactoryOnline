<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.online.factory.factoryonline.modules.FactoryDetail.FactoryDetailViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="详情"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/personal_info">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/advertisement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y200" />

                    <TextView
                        android:id="@+id/tv_pager_index"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:layout_margin="@dimen/x10"
                        android:background="@drawable/half_black_rectangle_background"
                        android:padding="@dimen/x10"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:text='@{"1/"+viewModel.imageUrls.size()}'
                        tool:text="1/6" />
                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/rl_essential_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/advertisement"
                    android:layout_marginBottom="@dimen/x10"
                    android:background="#fff"
                    android:padding="@dimen/x10">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x10"
                        android:maxLines="2"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:text="@{viewModel.title}"
                        tool:text="万江客运总站理想0769" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title"
                        android:layout_marginBottom="@dimen/x10"
                        android:textColor="#FC6517"
                        android:textSize="22sp"
                        android:text="@{viewModel.price}"
                        tool:text="1300" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_toRightOf="@+id/tv_price"
                        android:text="元/平米"
                        android:textColor="#878787"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_price"
                        android:text="发布：5小时前"
                        android:textColor="#AEAEAE"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_price"
                        android:text="浏览：10050人"
                        android:textColor="#AEAEAE"
                        android:textSize="14sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/additional_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_essential_info"
                    android:layout_marginBottom="@dimen/x10"
                    android:background="#fff"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x10"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginTop="@dimen/x15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="面积："
                            android:textColor="#797979"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:text="@{viewModel.range}"
                            android:textSize="16sp"
                            tool:text="1000m²" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/x10"
                        android:background="#E8E8E8" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x10"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginTop="@dimen/x15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地址："
                            android:textColor="#797979"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            tool:text="四环路理想大道段" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/x10"
                        android:background="#E8E8E8" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x10"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginTop="@dimen/x15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="描述："
                            android:textColor="#797979"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:text="@{viewModel.description}"
                            tool:text="交通方便，环境优美，价格优惠" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/additional_info"
                    android:layout_marginBottom="@dimen/x10"
                    android:gravity="center_horizontal"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:padding="@dimen/x10">

                    <com.online.factory.factoryonline.customview.RoundImageView
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/x80"
                        android:src="@drawable/logo"
                        app:border_inside_color="#F7FFFF"
                        app:border_outside_color="#E8E4E5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x10"
                        android:textColor="#B1B1B1"
                        android:textSize="16sp"
                        tool:text="gindoc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tool:text="发布了12条信息"
                        android:textColor="#888888"
                        android:textSize="18sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x15"
                        android:background="@drawable/orange_rectangle_background"
                        android:drawableRight="@drawable/ic_right_orange"
                        android:paddingBottom="@dimen/x15"
                        android:paddingLeft="@dimen/x20"
                        android:paddingRight="@dimen/x20"
                        android:paddingTop="@dimen/x15"
                        android:text="信息详情"
                        android:textColor="#FE691D"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/personal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#2E3641"
                android:gravity="center_vertical"
                android:padding="@dimen/x10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    tool:text="gindoc" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"
                    tool:text="13823394774-深圳"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FF532D"
                android:drawableTop="@drawable/ic_phone"
                android:gravity="center"
                android:layout_marginRight="1dp"
                android:paddingBottom="@dimen/x10"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:paddingTop="@dimen/x10"
                android:text="电话"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FF532D"
                android:drawableTop="@drawable/ic_email"
                android:gravity="center"
                android:paddingBottom="@dimen/x10"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:paddingTop="@dimen/x10"
                android:text="短信"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>
</layout>