<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="view"
            type="com.online.factory.factoryonline.modules.feedback.FeedbackActivity" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:orientation="vertical">

        <com.online.factory.factoryonline.customview.TitleBar
            android:id="@+id/rl_top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            app:title_name="意见反馈"
            app:title_text_color="#424242"
            app:title_visible="true"
            app:left_text="返回"
            app:left_text_color="@color/colorPrimary"
            app:left_drawable_padding="@dimen/x5"
            app:left_text_drawable="@drawable/ic_arrow_left_green"
            app:left_text_visible="true"
            app:right_text="提交"
            app:right_text_color="@color/colorPrimary"
            app:right_text_visible="true"
            android:background="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x29"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x15"
            android:text="问题描述"
            android:textColor="#838383"
            android:textSize="@dimen/x13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#dbdbdb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/x10">

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="top"
                android:hint="您好，请描述您反馈的问题或者建议.."
                android:minHeight="@dimen/x100"
                android:textColorHint="#999999"
                android:textSize="@dimen/x13" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="2-400字"
                android:textColor="#999999"
                android:textSize="@dimen/x10" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#dbdbdb" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x29"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x15"
            android:text="联系方式"
            android:textColor="#838383"
            android:textSize="@dimen/x13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#dbdbdb" />

        <EditText
            android:id="@+id/et_phonenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:hint="请留下您的QQ号码/手机号/邮箱"
            android:maxLength="30"
            android:padding="@dimen/x10"
            android:textColorHint="#999999"
            android:textSize="@dimen/x13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#dbdbdb" />
    </LinearLayout>
</layout>