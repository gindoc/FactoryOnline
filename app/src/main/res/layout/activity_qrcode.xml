<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="view"
            type="com.online.factory.factoryonline.modules.setting.qrcode.QRCodeActivity" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <com.online.factory.factoryonline.customview.TitleBar
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            app:title_name="关于我们"
            android:background="@android:color/white"
            app:title_visible="true"
            app:title_text_size="@dimen/x6"
            app:title_text_color="#424242"
            app:left_text="返回"
            app:left_text_color="@color/colorPrimary"
            app:left_text_visible="true"
            app:left_text_drawable="@drawable/ic_arrow_left_green"
            app:left_text_size="@dimen/x5"
            app:left_drawable_padding="@dimen/x5"
            android:layout_height="@dimen/header_height"/>

        <ImageView
            android:id="@+id/iv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y35"
            android:src="@drawable/about" />

        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x150"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y30"
            android:src="@drawable/ic_no_pic"
            android:layout_below="@id/iv_about"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/slogan"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_qrcode"
            android:layout_marginTop="@dimen/y35"/>
    </RelativeLayout>
</layout>