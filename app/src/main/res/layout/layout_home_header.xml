<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="com.online.factory.factoryonline.modules.main.fragments.home.HomeContract.Presenter"/>
        <variable
            name="view"
            type="com.online.factory.factoryonline.modules.main.fragments.home.HomeFragment"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.online.factory.factoryonline.customview.SlideShowView
                android:id="@+id/slideShowView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y145"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/y11"
                android:paddingBottom="@dimen/y11"
                android:paddingLeft="@dimen/x12"
                android:paddingRight="@dimen/x13"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x21"
                    android:src="@drawable/ic_msg_online"/>

                <com.online.factory.factoryonline.customview.VerticalScrollView
                    android:id="@+id/scroll_txt_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <include layout="@layout/line"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f5f5f5"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_find"
                            style="@style/service_style"
                            android:background="@drawable/find_bg_selector"
                            android:onClick="@{()->view.findFactory()}"
                            android:text="我要找房"/>

                        <RadioButton
                            android:id="@+id/rb_agency"
                            style="@style/service_style"
                            android:onClick="@{()->view.isOwner()}"
                            android:background="@drawable/agency_bg_selector"
                            android:text="我是业主"/>

                        <RadioButton
                            android:id="@+id/rb_owner"
                            style="@style/service_style"
                            android:onClick="@{()->view.getCommission()}"
                            android:background="@drawable/owner_bg_selector"
                            android:text="悬赏栏"/>
                    </RadioGroup>

                    <FrameLayout
                        android:id="@+id/rolePick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </FrameLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10"
                android:gravity="center_vertical"
                android:text="优质厂房"
                android:drawableLeft="@drawable/ic_greate_factory"
                android:drawablePadding="6dp"
                android:textColor="#1ab80f"
                android:textSize="18sp"/>
        </LinearLayout>

    </RelativeLayout>
</layout>