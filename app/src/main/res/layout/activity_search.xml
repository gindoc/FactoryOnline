<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="#1AB90F"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x19">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/white_rectangle_background"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="@dimen/x10"
                android:gravity="center_vertical"
                android:hint="请输入地段/面积/关键字"
                android:paddingBottom="@dimen/y5"
                android:paddingLeft="@dimen/x15"
                android:paddingTop="@dimen/y5"
                android:textColor="#424242"
                android:textColorHint="#9d9ca2"
                android:textSize="14sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="取消"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/y41"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/green_rectangle_solid_background"
                        android:drawablePadding="@dimen/x9"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x19"
                        android:text="搜索历史"
                        android:textColor="#424242"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x19"
                        android:paddingRight="@dimen/x19"
                        android:text="清除"
                        android:textColor="#1ab80f"

                        android:textSize="14sp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/x19"
                    android:layout_marginRight="@dimen/x19"
                    android:background="#dbdbdb"/>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x19"
                    android:paddingRight="@dimen/x19"
                    app:flexWrap="wrap">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x10"
                        android:layout_marginTop="@dimen/x10"
                        android:background="@drawable/gray_rectangle_outline_with_corner"
                        android:gravity="center"
                        android:paddingBottom="@dimen/x6"
                        android:paddingLeft="@dimen/x15"
                        android:paddingRight="@dimen/x15"
                        android:paddingTop="@dimen/x6"
                        android:text="万江"
                        android:textColor="#424242"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x10"
                        android:layout_marginTop="@dimen/x10"
                        android:background="@drawable/gray_rectangle_outline_with_corner"
                        android:gravity="center"
                        android:paddingBottom="@dimen/x6"
                        android:paddingLeft="@dimen/x15"
                        android:paddingRight="@dimen/x15"
                        android:paddingTop="@dimen/x6"
                        android:text="万江水蛇涌"
                        android:textColor="#424242"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x10"
                        android:layout_marginTop="@dimen/x10"
                        android:background="@drawable/gray_rectangle_outline_with_corner"
                        android:gravity="center"
                        android:paddingBottom="@dimen/x6"
                        android:paddingLeft="@dimen/x15"
                        android:paddingRight="@dimen/x15"
                        android:paddingTop="@dimen/x6"
                        android:text="万江水蛇涌"
                        android:textColor="#424242"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x10"
                        android:layout_marginTop="@dimen/x10"
                        android:background="@drawable/gray_rectangle_outline_with_corner"
                        android:gravity="center"
                        android:paddingBottom="@dimen/x6"
                        android:paddingLeft="@dimen/x15"
                        android:paddingRight="@dimen/x15"
                        android:paddingTop="@dimen/x6"
                        android:text="万江水蛇涌"
                        android:textColor="#424242"
                        android:textSize="16sp"/>
                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>

            <com.online.factory.factoryonline.customview.recyclerview.SuperRecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>
</layout>