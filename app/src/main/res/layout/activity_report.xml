<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="view"
            type="com.online.factory.factoryonline.modules.FactoryDetail.report.ReportActivity" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.online.factory.factoryonline.customview.TitleBar
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            app:title_name="举报"
            android:background="@android:color/white"
            app:title_visible="true"
            app:title_text_size="@dimen/x6"
            app:title_text_color="#424242"
            app:left_text="返回"
            app:left_text_color="@color/colorPrimary"
            app:left_text_visible="true"
            app:left_text_drawable="@drawable/ic_arrow_left_green"
            app:left_text_size="@dimen/x5"
            app:left_drawable_padding="@dimen/x5"
            app:right_text="提交"
            app:right_text_visible="true"
            app:right_text_size="@dimen/x5"
            android:layout_height="@dimen/header_height"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y32"
                    android:background="#f5f5f5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x15"
                    android:text="举报房源"
                    android:textColor="#808080"
                    android:textSize="@dimen/x13" />

                <include layout="@layout/line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="@dimen/x15"
                    android:text="大岭山大塘工业园新出带装修2楼2500平方出租.有办公室"
                    android:textColor="#424242"
                    android:textSize="@dimen/x14" />

                <include layout="@layout/line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y32"
                    android:background="#f5f5f5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x15"
                    android:text="举报内容"
                    android:textColor="#808080"
                    android:textSize="@dimen/x13" />

                <include layout="@layout/line" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x15"
                    android:orientation="vertical">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y44"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x15"
                        android:button="@drawable/report_selector"
                        android:text="厂房位置有误"
                        android:textColor="#424242"
                        android:textSize="@dimen/x14" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/x15"
                        android:background="#dbdbdb" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y44"
                        android:button="@drawable/report_selector"
                        android:paddingLeft="@dimen/x15"
                        android:gravity="center_vertical"
                        android:text="房源价格不符"
                        android:textColor="#424242"
                        android:textSize="@dimen/x14" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/x15"
                        android:background="#dbdbdb" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y44"
                        android:button="@drawable/report_selector"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x15"
                        android:text="发布人电话有误"
                        android:textColor="#424242"
                        android:textSize="@dimen/x14" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/x15"
                        android:background="#dbdbdb" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y44"
                        android:button="@drawable/report_selector"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x15"
                        android:text="图片或面积有误"
                        android:textColor="#424242"
                        android:textSize="@dimen/x14" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/x15"
                        android:background="#dbdbdb" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y44"
                        android:button="@drawable/report_selector"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x15"
                        android:text="其他"
                        android:textColor="#424242"
                        android:textSize="@dimen/x14" />
                </RadioGroup>



                <include layout="@layout/line" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y32"
                    android:background="#f5f5f5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x15"
                    android:text="我要吐槽"
                    android:textColor="#808080"
                    android:textSize="@dimen/x13" />

                <include layout="@layout/line" />

                <EditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y85"
                    android:layout_margin="@dimen/x10"
                    android:background="#f5f5f5"
                    android:gravity="top|left"
                    android:hint="请详细描述你的投诉内容（字数200以内）"
                    android:padding="@dimen/x10"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/x12" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</layout>