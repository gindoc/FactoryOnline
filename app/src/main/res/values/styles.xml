<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="actionBarSize">@dimen/header_height</item>
    </style>

    <!-- app启动页的背景. -->
    <style name="SplashTheme" parent="AppTheme.Base">
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/line_with_db</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:fitsSystemWindows">true</item>-->
    </style>

    <style name="HomeTheme" parent="AppTheme.Base">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="bottom_tab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/y4</item>
        <item name="android:textColor">@drawable/rb_bottom_tab_text_selector</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textSize">@dimen/x10</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="service_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/x10</item>
        <item name="android:textSize">@dimen/x13</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textColor">@drawable/service_tab_text_selector</item>
    </style>

    <style name="DarkAnimation">
        <item name="android:windowEnterAnimation">@anim/dark_fade_in</item>
        <item name="android:windowExitAnimation">@anim/dark_fade_out</item>
    </style>

    <style name="ClusterIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:textSize">@dimen/x13</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">@dimen/x12</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>

    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="publish_tags_page_style">
        <item name="android:layout_width">@dimen/x80</item>
        <item name="android:layout_height">@dimen/x80</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    
    <style name="LoginTabLayoutStyle"  parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/x14</item>
        <item name="android:textColor">#424242</item>
    </style>
</resources>
